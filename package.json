{
    "name": "@tecido/web",
    "version": "0.0.1",
    "description": "",
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "dev": "tsx src/server.ts",
        "build": "npm run build:client && npm run build:server",

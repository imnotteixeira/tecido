        "canvas": "^2.11.2",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "dotenv-flow": "^3.2.0",
        "ejs": "^3.1.8",
        "express": "^4.19.2",
        "konva": "^9.3.11",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-konva": "^18.2.10",
        "reflect-metadata": "^0.1.13",
        "sirv": "^2.0.4",
        "typedi": "^0.10.0"
    },
